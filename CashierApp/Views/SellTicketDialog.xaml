<Window x:Class="CashierApp.Views.SellTicketDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление билетов" Height="280" Width="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Инфо о рейсе -->
        <TextBlock Text="Маршрут:" FontWeight="Bold" />
        <TextBlock Grid.Column="1" Text="{Binding Trip.RouteTitle}" Margin="8,0,0,0" />

        <TextBlock Grid.Row="1" Text="Отправление:" FontWeight="Bold" />
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Trip.DepartureTime}" Margin="8,0,0,0" />

        <TextBlock Grid.Row="2" Text="Свободных мест:" FontWeight="Bold" />
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
            <TextBlock Text="{Binding AvailableSeats}" />
            <TextBlock Text="   Цена за билет: " Margin="12,0,0,0"/>
            <TextBlock Text="{Binding PricePerTicket}" />
            <TextBlock Text=" руб." />
        </StackPanel>

        <!-- Основная панель -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="0,12,0,0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Количество:" VerticalAlignment="Center" Width="110" />
                <Button Content="-" Width="28" Click="Decrement_Click"/>
                <TextBox Width="60" Margin="8,0" HorizontalContentAlignment="Center"
                         Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="+" Width="28" Click="Increment_Click"/>
                <TextBlock Text="  из " VerticalAlignment="Center" Margin="12,0,0,0"/>
                <TextBlock Text="{Binding AvailableSeats}" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Оплата:" VerticalAlignment="Center" Width="110"/>
                <ComboBox Width="220" ItemsSource="{Binding PaymentTypes}" SelectedItem="{Binding SelectedPaymentType}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Итого:" FontWeight="Bold" Width="110" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalPrice}" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text=" руб." Margin="4,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Оформить" Width="110" Margin="0,0,8,0" Command="{Binding ConfirmCommand}" />
            <Button Content="Отмена" Width="90" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>