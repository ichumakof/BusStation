<Window x:Class="AdminApp.Views.ScheduleGeneratorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Генератор расписания рейсов" 
        Height="650" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="ГЕНЕРАЦИЯ РАСПИСАНИЯ РЕЙСОВ"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Основная форма -->
        <StackPanel Grid.Row="1">

            <!-- 1. Выбор маршрута -->
            <GroupBox Header="Выбор маршрута" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Label Content="Маршрут:"/>
                    <ComboBox x:Name="cbRoutes" 
                             DisplayMemberPath="RouteInfo"
                             Height="30"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- 2. Период генерации + время -->
            <GroupBox Header="Период генерации" Margin="0,0,0,10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>
                    <!-- Дата начала -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Дата начала:" Width="100" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpStartDate" Grid.Row="0" Grid.Column="1" Width="150" SelectedDate="{x:Static sys:DateTime.Today}" Margin="0,0,10,0"/>
                    <!-- Время отправления -->
                    <Label Grid.Row="0" Grid.Column="2" Content="Время отправления:" Margin="10,0,5,0" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal">
                        <ComboBox x:Name="cbHour" Width="60" Margin="0,0,5,0"/>
                        <TextBlock Text=":" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="cbMinute" Width="60"/>
                    </StackPanel>
                    <!-- Дата окончания -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Дата окончания:" Width="100" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpEndDate" Grid.Row="1" Grid.Column="1" Width="150" SelectedDate="{x:Static sys:DateTime.Today}"/>
                </Grid>
            </GroupBox>

            <!-- 3. Дни недели -->
            <GroupBox Header="Дни недели" Margin="0,0,0,10">
                <WrapPanel Margin="10">
                    <CheckBox x:Name="chkMonday" Content="Понедельник" Margin="5" IsChecked="True"/>
                    <CheckBox x:Name="chkTuesday" Content="Вторник" Margin="5" IsChecked="True"/>
                    <CheckBox x:Name="chkWednesday" Content="Среда" Margin="5" IsChecked="True"/>
                    <CheckBox x:Name="chkThursday" Content="Четверг" Margin="5" IsChecked="True"/>
                    <CheckBox x:Name="chkFriday" Content="Пятница" Margin="5" IsChecked="True"/>
                    <CheckBox x:Name="chkSaturday" Content="Суббота" Margin="5"/>
                    <CheckBox x:Name="chkSunday" Content="Воскресенье" Margin="5"/>
                </WrapPanel>
            </GroupBox>

            <!-- 4. Ресурсы -->
            <GroupBox Header="Ресурсы" Margin="0,0,0,10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Водитель:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbDrivers" Grid.Row="0" Grid.Column="1" Height="30" DisplayMemberPath="Title" SelectedValuePath="Id" Margin="0,0,0,8"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Автобус:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbBuses" Grid.Row="1" Grid.Column="1" Height="30" DisplayMemberPath="Title" SelectedValuePath="Id" Margin="0,0,0,8"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Цена (руб):" VerticalAlignment="Center"/>
                    <TextBox x:Name="tbPrice" Grid.Row="2" Grid.Column="1" Height="26" Text="0,00" />
                </Grid>
            </GroupBox>

            <!-- 4. Информация о генерации -->
            <Border Background="#f0f8ff" BorderBrush="#b0e0e6" BorderThickness="1" 
                    CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock x:Name="tbInfo" 
                              Text="Выберите параметры для генерации"
                              TextWrapping="Wrap"/>
                    <ProgressBar x:Name="pbProgress" 
                                Height="10" 
                                Margin="0,10,0,0"
                                Visibility="Collapsed"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnGenerate" 
                   Content="Сгенерировать" 
                   Width="120" Height="35"
                   Background="#4CAF50"
                   Foreground="White"
                   FontWeight="Bold"
                   Click="btnGenerate_Click"
                   Margin="0,0,10,0"/>

            <Button x:Name="btnCancel" 
                   Content="Отмена" 
                   Width="120" Height="35"
                   Click="btnCancel_Click"/>
        </StackPanel>

    </Grid>
</Window>