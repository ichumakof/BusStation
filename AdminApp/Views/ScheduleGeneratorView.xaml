<Window x:Class="AdminApp.Views.ScheduleGeneratorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Генератор расписания рейсов" 
        Height="693" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15" CornerRadius="4" Margin="0,0,0,6">
            <TextBlock Text="ГЕНЕРАЦИЯ НОВЫХ РЕЙСОВ"
               Foreground="White"
               FontSize="18"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        </Border>

        <!-- Основная форма -->
        <StackPanel Grid.Row="1">

            <!-- 1. Выбор маршрута -->
            <GroupBox Header="Выбор маршрута" Margin="0,0,0,10" FontSize="16">
                <StackPanel Margin="10">
                    <Label Content="Маршрут:"/>
                    <ComboBox x:Name="cbRoutes" 
                             DisplayMemberPath="RouteInfo"
                             Height="30"
                             Margin="0,5,0,0"
                             ItemsSource="{Binding Routes}"
                             SelectedItem="{Binding SelectedRoute, Mode=TwoWay}" />
                </StackPanel>
            </GroupBox>

            <!-- 2. Период генерации + время -->
            <GroupBox Header="Период генерации" Margin="0,0,0,10" FontSize="16">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>
                    <!-- Дата начала -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Дата начала:" Width="100" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpStartDate" Grid.Row="0" Grid.Column="1" Width="150" SelectedDate="{Binding StartDate, Mode=TwoWay}"/>
                    <!-- Время отправления -->
                    <Label Grid.Row="0" Grid.Column="2" Content="Время отправления:" Margin="10,0,5,0" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal">
                        <ComboBox x:Name="cbHour" Width="60" Margin="0,0,5,0"
                                  ItemsSource="{Binding HourList}" SelectedItem="{Binding SelectedHour, Mode=TwoWay}"/>
                        <TextBlock Text=":" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="cbMinute" Width="60"
                                  ItemsSource="{Binding MinuteList}" SelectedItem="{Binding SelectedMinute, Mode=TwoWay}"/>
                    </StackPanel>
                    <!-- Дата окончания -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Дата окончания:" Width="100" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpEndDate" Grid.Row="1" Grid.Column="1" Width="150" SelectedDate="{Binding EndDate, Mode=TwoWay}"/>
                </Grid>
            </GroupBox>

            <!-- 3. Дни недели -->
            <GroupBox Header="Дни недели" Margin="0,0,0,10" FontSize="16">
                <WrapPanel Margin="10">
                    <CheckBox x:Name="chkMonday" Content="Понедельник" Margin="5" IsChecked="{Binding Monday, Mode=TwoWay}"/>
                    <CheckBox x:Name="chkTuesday" Content="Вторник" Margin="5" IsChecked="{Binding Tuesday, Mode=TwoWay}"/>
                    <CheckBox x:Name="chkWednesday" Content="Среда" Margin="5" IsChecked="{Binding Wednesday, Mode=TwoWay}"/>
                    <CheckBox x:Name="chkThursday" Content="Четверг" Margin="5" IsChecked="{Binding Thursday, Mode=TwoWay}"/>
                    <CheckBox x:Name="chkFriday" Content="Пятница" Margin="5" IsChecked="{Binding Friday, Mode=TwoWay}"/>
                    <CheckBox x:Name="chkSaturday" Content="Суббота" Margin="5" IsChecked="{Binding Saturday, Mode=TwoWay}"/>
                    <CheckBox x:Name="chkSunday" Content="Воскресенье" Margin="5" IsChecked="{Binding Sunday, Mode=TwoWay}"/>
                </WrapPanel>
            </GroupBox>

            <!-- 4. Ресурсы -->
            <GroupBox Header="Прочее" Margin="0,0,0,10" FontSize="16">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Водитель:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbDrivers" Grid.Row="0" Grid.Column="1" Height="30"
                              ItemsSource="{Binding Drivers}"
                              DisplayMemberPath="Title"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedDriverId, Mode=TwoWay}"
                              Margin="0,0,0,8"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Автобус:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbBuses" Grid.Row="1" Grid.Column="1" Height="30"
                              ItemsSource="{Binding Buses}"
                              DisplayMemberPath="Title"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedBusId, Mode=TwoWay}"
                              Margin="0,0,0,8"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Цена (руб):" VerticalAlignment="Center"/>
                    <TextBox x:Name="tbPrice" Grid.Row="2" Grid.Column="1" Height="26" Text="{Binding PriceText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnGenerate" 
                   Content="Сгенерировать" 
                   Width="134" Height="35"
                   Background="#4CAF50"
                   Foreground="White"
                   FontWeight="Bold"
                   Command="{Binding GenerateCommand}"
                   Margin="0,0,10,0" FontSize="16"/>

            <Button x:Name="btnCancel" 
                   Content="Отмена" 
                   Width="120" Height="35"
                   Command="{Binding CancelCommand}" FontSize="16"/>
        </StackPanel>

    </Grid>
</Window>