<!-- Views/UsersWindow.xaml -->
<Window x:Class="AdminApp.Views.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список кассиров"
        Width="760" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15" CornerRadius="4" Margin="0,0,0,43">
            <TextBlock Text="УПРАВЛЕНИЕ ПЕРСОНАЛОМ"
                Foreground="White"
                FontSize="24"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Border>
        <!-- Верх: кнопка редактирования своих данных -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,90,0,0">
            <Button Content="Редактировать свои данные"
                    Width="220" Height="28"
                    Command="{Binding EditSelfCommand}" FontSize="16" />
        </StackPanel>

        <!-- Середина: список кассиров -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,10,0,10" FontSize="16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="*"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="2*"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding RoleName}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Низ: кнопки действий -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Удалить" Width="100" Command="{Binding DeleteCommand}" FontSize="16"/>
            <Button Content="Добавить" Width="100" Margin="8,0,0,0" Command="{Binding AddCommand}" FontSize="16"/>
            <Button Content="Редактировать" Width="120" Margin="8,0,0,0" Command="{Binding EditCommand}" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>